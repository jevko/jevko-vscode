{
  "name": "jevko",
	"publisher": "jevko",
  "displayName": "[EXPERIMENTAL] Jevko Interface",
  "description": "[EXPERIMENTAL] Jevko interface for Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:jevko.translateCurrentFile",
    "onCommand:jevko.forceActivate",
    "onLanguage:jevkodata",
    "onLanguage:jevkoml",
    "onLanguage:json",
    "onLanguage:html",
    "onLanguage:xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jevko.translateCurrentFile",
        "title": "Jevko: translate current file"
      },
      {
        "command": "jevko.forceActivate",
        "title": "Jevko: force activate extension"
      }
    ]
  },
  "repository": {
      "type": "git",
      "url": "https://codeberg.org/jevko-org/jevko-vscode.git"
  },
  "icon": "jevko.png",
  "galleryBanner": {
      "color": "#000000",
      "theme": "dark"
  },
  "homepage": "https://jevko.org",
  "keywords": [
    "jevko", "interface", "integrated",
    "markup", "jevkoml", "syntax", "minimal", 
    "text", "format", "heredoc", "html", "xml",
    "minimal", "simple", "flexible",
    "data", "jevkodata", "interchange", "configuration"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "clean": "rm -rf ./out",
    "clean-compile": "npm run clean && npm run compile",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.63.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
